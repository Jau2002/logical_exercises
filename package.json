{
	"name": "logical_exercises",
	"version": "1.0.0",
	"description": "",
	"main": "index.js",
	"scripts": {
		"test": "jest",
		"lint": "eslint --fix --quiet --color \"src/**/*.ts\"",
		"dev": "tsnd --respawn --transpile-only --module-experimental --quiet --cls ./src/number_systems/converter.ts"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Jau2002/logical_exercises.git"
	},
	"keywords": [],
	"author": "Jaume Suarez <santjaume02@gmail.com>",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/Jau2002/logical_exercises/issues"
	},
	"homepage": "https://github.com/Jau2002/logical_exercises#readme",
	"devDependencies": {
		"@types/jest": "28.1.5",
		"@typescript-eslint/eslint-plugin": "5.30.6",
		"@typescript-eslint/parser": "5.30.6",
		"eslint": "8.19.0",
		"eslint-config-airbnb-base": "15.0.0",
		"eslint-config-prettier": "8.5.0",
		"eslint-plugin-import": "2.26.0",
		"eslint-plugin-prettier": "4.2.1",
		"jest": "28.1.3",
		"prettier": "2.7.1",
		"ts-jest": "28.0.6",
		"ts-node-dev": "2.0.0",
		"typescript": "4.7.4"
	},
	"prettier": {
		"printWidth": 80,
		"tabWidth": 2,
		"useTabs": true,
		"semi": true,
		"singleQuote": true,
		"quoteProps": "as-needed",
		"jsxSingleQuote": true,
		"trailingComma": "none",
		"bracketSpacing": true,
		"bracketSameLine": false,
		"arrowParens": "avoid",
		"requirePragma": false,
		"insertPragma": false,
		"proseWrap": "preserve",
		"vueIndentScriptAndStyle": false,
		"endOfLine": "lf",
		"embeddedLanguageFormatting": "auto",
		"singleAttributePerLine": true
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node",
		"verbose": true
	},
	"eslintConfig": {
		"env": {
			"es2021": true,
			"node": true,
			"jest": true
		},
		"extends": [
			"airbnb-base",
			"eslint-config-prettier"
		],
		"parser": "@typescript-eslint/parser",
		"parserOptions": {
			"ecmaVersion": "latest",
			"sourceType": "module"
		},
		"plugins": [
			"@typescript-eslint",
			"prettier"
		],
		"rules": {
			"no-param-reassign": "off",
			"import/no-unresolved": "off",
			"no-plusplus": [
				"error",
				{
					"allowForLoopAfterthoughts": true
				}
			],
			"import/extensions": [
				"error",
				"never",
				{
					"ignorePackages": true
				}
			]
		},
		"ignorePatterns": [
			"node_modules/"
		]
	}
}
